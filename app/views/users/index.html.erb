 <h1 align="center"> Listing all Bloggers </h1>
 <br/>
<div align = "center">

    <% @users.each do |user| %>
    <ul class =" listing ">
        <div class = " row ">
            <div class = "well col-md-4">
                <li><%= link_to gravatar_for(user), user_path(user) %></li>
                <li class = "article-title">
                    <%= link_to user.username, user_path(user) %>
                </li>

                <li> <small> <%= pluralize(user.articles.count, "article") if user.articles %></li>

            </div>
        </div>
    </ul>    
    
    
    <% end %>

   
    <ul class="pagination">
            <li class="page-item"> <%= paginate @users %></li>
        </ul>  

</div>
 