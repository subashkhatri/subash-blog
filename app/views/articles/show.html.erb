

<h2 align = "center"> <%= @article.title %></h2> <br />

 <div class ="well col-sm-8">
    <% if @article.user %>
        <ul class =" listing ">
            <div class = " row center">
                <div class = "well col-md-4">
                    <li> Created by:</li>
                    
                    <li><%= link_to gravatar_for(@article.user), user_path(@article.user) %></li>
                    <li class = "article-title">
                        <%= link_to @article.user.username, user_path(@article.user) %>
                    </li>

                    <li> <small> <%= pluralize(@article.user.articles.count, "article") if @article.user.articles %></li>

                </div>
            </div>
        </ul>   
    <% end %> 

   <h5 align = "center description" > <strong>Description</strong> </h5>
   <hr>
    <%= simple_format(@article.description) %>

    <div class = "article-actions">
        <%= link_to "Edit articles", edit_article_path(@article), class: "btn btn-xs btn-primary"  %>
        <%= link_to 'Delete this article', article_path(@article), method: :delete, data: {confirm: "Are you sure?"},  class: "btn btn-xs btn-danger" %>
        <%= link_to "View all articles", articles_path, class: "btn btn-xs btn-success"  %>

    </div>

    <div class ="well col-sm-8">

  
   <hr>
    <div class = "article-actions">
    Created At: <%= @article.created_at %> <br>

    Updated At: <%= @article.updated_at %>
    </div>

   
    
</div>
