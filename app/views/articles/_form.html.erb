<%= render 'shared/errors', obj: @article %>
<div class = "row">
    <div class = "col-md-8" style="margin-left: 15%;" >

        <%= form_for (@article), :html => {class: "form", role:"form"} do |f| %>
           <div class= "form-group"> 
                <strong>
                    <%= f.label :title%> 
                </strong>
            </div>
                
                <div class ="col-xs-10">
                    <%= f.text_field :title, class: "form-control", placeholder: "Title here!", autofocus: true %>

                </div>
                <br>
             <div class= "form-group">
                <div >   
                <strong><%= f.label :description %> </strong>
                </div>
                <div class ="col-xs-10">
                    <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Description here!", autofocus: true %>

                </div>    
            <br>
                <div class= "form-group">           
                    <%= f.submit class: 'col-sm-5 btn btn-primary btn-lg' %> 
                </div>
            
            </div>
        <% end %>

        <div class = "col-cs-4">
           [ <%= link_to "Cancel Request and return to article listing", articles_path %> ]
        </div>
    </div>
</div>