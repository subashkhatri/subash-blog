<h1 align="center"> Log In</h1>


<%= form_for(:session, :html => {class: "form", role:"form"}, url: login_path) do |f| %>
    <div class= "form-group"> 
        <strong>
            <%= f.label :email %> 
        </strong>
    </div>
        
        <div class ="col-xs-10">
            <%= f.email_field :email, class: "form-control", placeholder: "Email here!", autofocus: true %>

        </div>
        <br>
      
    <div class= "form-group">
      <div >   
      <strong><%= f.label :password %> </strong>
      </div>
      <div class ="col-xs-10">
          <%= f.password_field :password, class: "form-control", placeholder: "password !", autofocus: true %>

      </div>        
    <br>
        <div class= "form-group">           
            <%= f.submit "Log in", class: 'col-sm-5 btn btn-primary btn-lg' %> 
        </div>
    
    </div>
<% end %>

<div class = "col-cs-4">
    [ <%= link_to "Cancel Request and return to user listing", users_path %> ]
</div>